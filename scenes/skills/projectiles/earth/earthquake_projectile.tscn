[sub_resource type="GDScript" id="GDScript_dbyep"]
script/source = "@tool
extends AnimationPlayer

# --- CONFIGURATION ---
@export var sprite_node: Sprite2D
@export var anim_name: String = \"Skill_A\"
@export var start_frame: int = 0
@export var frame_count: int = 10 # How many frames to add
@export var fps: float = 15.0     # Speed of animation

# Click this checkbox in Inspector to run the script
@export var generate_keys: bool = false : set = _on_generate

func _on_generate(value):
	if value == false: return # Prevents running when unchecking
	
	if not sprite_node:
		printerr(\"‚ùå Please assign a Sprite2D node first!\")
		generate_keys = false # Reset checkbox
		return

	# 1. Get or Create Animation
	var library: AnimationLibrary
	if has_animation_library(\"\"):
		library = get_animation_library(\"\")
	else:
		library = AnimationLibrary.new()
		add_animation_library(\"\", library)
	
	var anim: Animation
	if library.has_animation(anim_name):
		anim = library.get_animation(anim_name)
		print(\"‚ö†Ô∏è Updating existing animation: \" + anim_name)
	else:
		anim = Animation.new()
		library.add_animation(anim_name, anim)
		print(\"‚úÖ Created new animation: \" + anim_name)

	# 2. Setup Animation Settings
	var step = 1.0 / fps
	anim.loop_mode = Animation.LOOP_NONE
	anim.length = step * frame_count
	anim.step = step

	# 3. Find or Create the Track for \"frame\"
	# The path to the property is \"NodeName:frame\"
	var track_path = str(sprite_node.name) + \":frame\"
	var track_idx = anim.find_track(track_path, Animation.TYPE_VALUE)

	if track_idx == -1:
		track_idx = anim.add_track(Animation.TYPE_VALUE)
		anim.track_set_path(track_idx, track_path)
	
	# 4. Insert Keys Loop
	for i in range(frame_count):
		var time = i * step
		var frame_value = start_frame + i
		anim.track_insert_key(track_idx, time, frame_value)

	print(\"üéâ Generated %d keys for '%s'!\" % [frame_count, anim_name])
	generate_keys = false # Reset checkbox
"

