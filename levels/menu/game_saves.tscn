[sub_resource type="GDScript" id="GDScript_gv87h"]
script/source = "extends Control

# --- CONFIGURATION ---
@export_file(\"*.tscn\") var background_scene_path: String
@export var scroll_speed: Vector2 = Vector2(30, 15)  # X and Y scroll speeds
@export var enable_looping: bool = true
@export var loop_width: float = 1920.0  # Adjust to your background width
@export var loop_height: float = 1080.0  # Adjust to your background height

# --- REFERENCES ---
@onready var subviewport: SubViewport = $SubViewportContainer/SubViewport
@onready var background_holder: Node2D = $SubViewportContainer/SubViewport/BackgroundHolder
@onready var menu_camera: Camera2D = $SubViewportContainer/SubViewport/BackgroundHolder/MenuCamera
@onready var slots_container: VBoxContainer = $CenterContainer/MenuPanel/MarginContainer/VBoxContainer

@onready var parallax_background: ParallaxBackground = $ParallaxBackground

func _ready() -> void:
	_setup_background()
	_refresh_save_slots()
	_connect_slot_buttons()

func _process(delta: float) -> void:
	_handle_scrolling(delta)

# --- BACKGROUND LOGIC ---
func _setup_background() -> void:
	if background_scene_path == \"\":
		return
	
	var scene_resource = load(background_scene_path)
	if not scene_resource:
		push_error(\"Failed to load background scene: \" + background_scene_path)
		return
	
	var instance = scene_resource.instantiate()
	background_holder.add_child(instance)
	
	# Remove player and other interactive elements
	_cleanup_background_instance(instance)
	
	# Ensure camera is active
	menu_camera.make_current()

func _cleanup_background_instance(instance: Node) -> void:
	# Remove common interactive elements
	var nodes_to_remove = [\"Player\", \"Enemies\", \"Items\", \"Collectibles\"]
	for node_name in nodes_to_remove:
		var node = instance.find_child(node_name, true, false)
		if node:
			node.queue_free()

# --- SCROLLING LOGIC ---
func _handle_scrolling(delta: float) -> void:
	if parallax_background:
		# If we have a ParallaxBackground, scroll it directly
		parallax_background.scroll_offset += scroll_speed * delta
		
		# Optional looping for ParallaxBackground
		if enable_looping:
			if parallax_background.scroll_offset.x > loop_width:
				parallax_background.scroll_offset.x = 0
			if parallax_background.scroll_offset.y > loop_height:
				parallax_background.scroll_offset.y = 0
	else:
		# Fallback: Scroll the camera if no ParallaxBackground exists
		menu_camera.position += scroll_speed * delta
		
		# Optional looping for camera
		if enable_looping:
			if menu_camera.position.x > loop_width:
				menu_camera.position.x = 0
			if menu_camera.position.y > loop_height:
				menu_camera.position.y = 0

# --- UI LOGIC ---
func _connect_slot_buttons() -> void:
	# Connect button signals
	for child in slots_container.get_children():
		if child is SaveSlot:
			if child.has_signal(\"slot_selected\"):
				child.slot_selected.connect(_on_slot_selected)
			if child.has_signal(\"slot_deleted\"):
				child.slot_deleted.connect(_on_slot_deleted)
		

func _refresh_save_slots() -> void:
	var buttons = [
		slots_container.get_node_or_null(\"Slot1\"),
		slots_container.get_node_or_null(\"Slot2\"),
		slots_container.get_node_or_null(\"Slot3\")
	]
	
	for i in range(buttons.size()):
		if buttons[i] == null:
			continue
			
		var slot_idx = i + 1
		var meta = SaveSystem.get_slot_metadata(slot_idx)
		buttons[i].setup(slot_idx, meta)

func _on_slot_selected(slot_index: int) -> void:
	var meta = SaveSystem.get_slot_metadata(slot_index)
	
	if meta.is_empty():
		GameManager.start_new_game(slot_index)
	else:
		GameManager.load_saved_game(slot_index)
		
func _on_slot_deleted(slot_index: int) -> void:
	SaveSystem.delete_slot(slot_index)
	_refresh_save_slots()

func _on_back_button_pressed() -> void:
	get_tree().change_scene_to_file(\"res://levels/menu/menu.tscn\")
"

